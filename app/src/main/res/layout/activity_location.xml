<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="60dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/round_corner_white_base_color"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:src="@drawable/logo_chiquita" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/select_location"
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_xxl">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/class_name"
                        style="@style/label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/location"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txv_location"
                        style="@style/field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/spacing_l"
                        android:drawableStart="@drawable/map"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:drawableTint="@color/cool"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/select"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/select_empacadora"
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/image_letter">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_lblEmpacadora"
                        style="@style/label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/empacadoras"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_empacadora"
                        style="@style/field"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/spacing_l"
                        android:drawableStart="@drawable/cate"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:drawableTint="@color/cool"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/select"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>


<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:id="@+id/empaWrapper"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="30dp">-->

<!--                <EditText-->
<!--                    android:id="@+id/empaET"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="60dp"-->
<!--                    android:layout_marginEnd="60dp"-->
<!--                    android:drawableLeft="@drawable/cate"-->
<!--                    android:drawablePadding="20dp"-->
<!--                    android:editable="false"-->
<!--                    android:focusable="false"-->
<!--                    android:fontFamily="@font/montserrat_regular"-->
<!--                    android:hint="@string/empacadoras"-->
<!--                    android:inputType="text"-->
<!--                    android:textColor="@color/black" />-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <LinearLayout
                android:id="@+id/submit_back_lay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back_tv"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner_blue_color"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/submit_tv"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner_blue_color"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-225dp"
        android:src="@drawable/bg_bn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="-10dp"
        android:background="@color/primary"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.3"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="left"
            android:text="@string/version"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.7"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="right"
            android:text="@string/all_rights"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>